    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
      "name": "Process Paystubs",
      "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/src/index.ts",
            "args": [
                "--directory",
                "/mnt/c/Users/path-to-paystubs",
                "--file-pattern",
                "^(?!.*summary).*\\.pdf$",
                "--file-pattern-flags",
        "im",
        // "--pdf-parser-type",
        // "pdf-parse",
        // "pdfjs",
        // "--pay-data-parser-type",
        // "position-index",
        // "regex",
        "--pay-data-regex-parsing-rules",
        "src/regex.rules.json",
        "--verbose"
            ],
      "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
